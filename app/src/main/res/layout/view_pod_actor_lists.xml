<?xml version="1.0" encoding="utf-8"?>
<com.example.themovieapp.viewpods.ActorListsViewPod xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    android:paddingBottom="@dimen/margin_large"
    android:paddingTop="@dimen/margin_large">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvBestActor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lbl_best_actors"
        android:textColor="@color/colorSecondaryText"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/margin_medium_2"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvMoreActors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lbl_more_actors"
        android:layout_alignParentEnd="true"
        android:layout_alignBaseline="@+id/tvBestActor"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginEnd="@dimen/margin_medium_2" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvActorLists"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvBestActor"
        android:layout_marginTop="@dimen/margin_card_medium_2"
        android:paddingEnd="@dimen/margin_card_medium_2"
        android:clipToPadding="false"/>
</com.example.themovieapp.viewpods.ActorListsViewPod>